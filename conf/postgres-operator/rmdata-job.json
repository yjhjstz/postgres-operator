{
    "apiVersion": "batch/v1",
    "kind": "Job",
    "metadata": {
        "name": "{{.JobName}}",
        "labels": {
            "vendor": "crunchydata",
            "adb-operator": "true",
            "pg-cluster": "{{.ClusterName}}"
        }
    },
    "spec": {
        "selector": {
            "matchLabels": {
                "adb-operator": "true"
            }
        },
        "backoffLimit": 0,
        "template": {
            "metadata": {
                "name": "{{.JobName}}",
                "labels": {
                    "vendor": "crunchydata",
                    "adb-operator": "true",
                    "pg-cluster": "{{.ClusterName}}"
                }
            },
            "spec": {
                "serviceAccountName": "pgo-target",
                "containers": [{
                    "name": "rmdata",
                    "image": "{{.PGOImagePrefix}}/pgo-rmdata:{{.PGOImageTag}}",
                    {{.ContainerResources }}
                    "env": [{
                        "name": "PG_CLUSTER",
                        "value": "{{.ClusterName}}"
                    }, {
                        "name": "REPLICA_NAME",
                        "value": "{{.ReplicaName}}"
                    }, {
                        "name": "REMOVE_DATA",
                        "value": "{{.RemoveData}}"
                    }, {
                        "name": "REMOVE_BACKUP",
                        "value": "{{.RemoveBackup}}"
                    }, {
                        "name": "IS_BACKUP",
                        "value": "{{.IsBackup}}"
                    }, {
                        "name": "IS_REPLICA",
                        "value": "{{.IsReplica}}"
                    }, {
                        "name": "NAMESPACE",
                        "valueFrom": {
                            "fieldRef": {
                                "fieldPath": "metadata.namespace"
                            }
                        }
                    }]
                }],
                "restartPolicy": "Never"
            }
        }
    }
}
